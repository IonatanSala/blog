<div class="container-fluid">
	<%= render 'shared/errors', obj: @user %>
		<%= form_for(@user, :html => {class: "form-horizontal", role: "form" }) do |f| %>
			<div class="form-group">
				<div class="control-label col-md-1 col-md-offset-1">
					<%= f.label :username %><br>
				</div>
				<div class="col-md-10">
					<%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
				</div>
			</div>
			
			<div class="form-group">
				<div class="control-label col-md-1 col-md-offset-1">
					<%= f.label :email %><br>
				</div>
				<div class="col-md-10">
					<%= f.email_field :email, class: "form-control", placeholder: "Enter email"%>
				</div>
			</div>

			<div class="form-group">
				<div class="control-label col-md-1 col-md-offset-1">
					<%= f.label :password %><br>
				</div>
				<div class="col-md-10">
					<%= f.password_field :password, class: "form-control", placeholder: "Enter password"%>
				</div>
			</div>

			<div class="form-group">
		    <div class="col-md-offset-2 col-md-10">
		      <%= f.submit(@user.new_record? ? "Sign up" : "Update your account", class: "btn btn-lg btn-primary") %>
		    </div>
		  </div>

		<%= link_to "Back To Articles", articles_path %>
		<% end %>
	</div>
</div>